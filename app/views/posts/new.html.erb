<%= form_with model: @post, html: { class: 'container d-flex vh-100 justify-content-center align-items-center' } do |form| %>
  <section class="row w-100 d-flex justify-content-center">
    <articles class="col-lg-8 col-md-10 col-sm-12">
      <div class="field">
        <%= form.label :body %>
        <%= form.text_area :body, rows: 8, style: 'resize: none;', class: 'form-control', placeholder: 'What is happening today?' %>
      </div>

      <div class="field mt-2">
        <%= form.submit 'Touch it', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', root_path, class: 'btn btn-link' %>
      </div>
    </articles>
  </section>
<% end %>
