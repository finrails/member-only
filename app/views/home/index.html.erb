<section class="container mt-4">
  <div class="row">
    <article class="col">
      <% @posts.each do |post| %>
        <div class="card mb-2">
          <div class="card-body">
            <% if user_signed_in? %>
              <h6 class="card-title">@<%= post.user.name.downcase %></h6>
            <% else %>
              <h6 class="card-title">Anonymous</h6>
            <% end %>
            <%= post.body %>
          </div>
        </div>
      <% end %>
    </article>
  </div>
</section>
