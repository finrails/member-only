<% if flash[:success] %>
  <p class="alert alert-success" role="alert">
    <%= flash[:success] %>
  </p>
<% end %>
<section class="container mt-4">
  <div class="row">
    <article class="col">
      <% @posts.each do |post| %>
        <div class="card mb-2">
          <div class="card-body">
            <h6 class="card-title">Anom</h6>
            <%= post.body %>
          </div>
        </div>
      <% end %>
    </article>
  </div>
</section>
