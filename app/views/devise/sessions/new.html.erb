<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'container vh-100 d-flex justify-content-center align-items-center' }) do |f| %>
  <section class="d-flex justify-content-center row w-100">
    <article class="col-lg-6 shadow p-4 rounded">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, placeholder: 'example@gmail.com', autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-primary px-4 mt-2' %>
      </div>
      <div class="links mt-2">
        <%= render "devise/shared/links" %>
      </div>
    </article>
  </section>
<% end %>

